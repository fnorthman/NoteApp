<resources>
    <style name="PopupMenuRounded" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_bottom_sheet</item>
        <item name="android:textColor">@color/popup_menu_text_color</item>
        <item name="android:itemTextAppearance">@style/PopupMenuItemText</item>
    </style>

    <style name="PopupMenuItemText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/popup_menu_text_color</item>
    </style>
    <style name="Theme.NoBackgroundDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item> <item name="android:backgroundDimAmount">0.6</item> </style>
</resources>
